@model Sklep.PortalWWW.Models.Sklep.DaneDoKoszyka
@{
    ViewData["Title"] = "Koszyk";
    Layout = "_KoszykLayout";
}

    <div class="nav-wrapper container grey">
      <h1 class="header center text-black">Twój koszyk</h1>
    </div>

<div class ="container">



		<div class="section">

        <div class="row gray">
	  
			<div class="col m2">
					@foreach (var element in Model.ElementyKoszyka)
					{
					<div class="col s12 m6">
						<div class="card">
						  <div class="card-image">
							  <img src="~/lib/materialize/css/nophoto.jpg">
							  <span class="card-title" style="width:100%; height:15%; background-color:black;font-size:small;">Nazwa produktu: @Html.ActionLink(@element.Ogloszenia.Nazwa,"Szczegoly","Sklep", new {id=element.Ogloszenia.IdOgloszenia},null)</span>
							 
						  </div>
						          <div class="card-action">
								   <p class="card-title">Ilość: @element.Ilosc </p>
								   <p class="card-title">Cena: @Model.Razem.ToString("0.00") </p>
								   <a asp-action="UsunKoszyk" asp-controller="Koszyk" asp-route-id="@element.Ogloszenia.IdOgloszenia" class="waves-effect orange-light btn-large"> <i class="material-icons right">remove_shopping_cart</i>  Usuń z koszyka </a>
								</div>

						</div>
					</div>
				   }

				<div class="col s12 m7">
					<h2 class="header">Łączny koszt:</h2>

						<div class="card horizontal">

						  <div class="card-image">
							<img src="https://lorempixel.com/100/190/nature/6">
						  </div>

						  <div class="card-stacked">

								<div class="card-content">
								  <p class="card-title" style = "font-size:large"> Razem: @Model.Razem.ToString("0.00") </p>
								</div>

								<div class="card-action">
								  <a href="#">Kupuję</a>
								</div>

						  </div>
						</div>

				 </div>

			</div>




	    </div>

	</div>


</div>
