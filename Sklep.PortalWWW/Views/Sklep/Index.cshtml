@model IEnumerable<Sklep.Data.Data.Tablica.Ogloszenia>
@{
    ViewData["Title"] = "Sklep";
    Layout = "~/Views/Shared/_SklepLayout.cshtml";
}

    <div class="nav-wrapper container grey">
      <h1 class="header center text-black">Sklep</h1>
    </div>

<div class="container">

	<div class="section">

        <div class="row gray">
	  
			<div class="col m2">
					@foreach (var ogloszenia in Model)
					{
					<div class="col s12 m6">
						<div class="card">
						  <div class="card-image">
							  <img src="~/lib/materialize/css/nophoto.jpg">
							  <span class="card-title" style="width:100%; height:15%; background:black;font-size:smaller;">@Html.ActionLink(@ogloszenia.Nazwa,"Szczegoly","Sklep", new {id=ogloszenia.IdOgloszenia},null) </span>
						  </div>
						</div>
					</div>
				   }
			</div>
	    </div>

	</div>

</div>
