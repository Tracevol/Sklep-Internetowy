@model Sklep.Data.Data.Tablica.Ogloszenia
@{
    ViewData["Title"] = "Szczegoly";
    Layout = "~/Views/Shared/_SklepLayout.cshtml";
}
<div class="card mb-4">




    <div class ="container">

        <div class="section">

             <div class="row gray">

                   <div class="col s12 m6">
						<div class="card">
						  <div class="card-image">
							  <img src="~/lib/materialize/css/nophoto.jpg">
							  <span class="card-title" style="width:100%; height:15%; background-color:black;font-size:small;">Nazwa: @Model.Nazwa</span>
							 
						  </div>
						          <div class="card-action">
								   <p class="card-title">Ilość: @Model.Opis </p>
								   <p class="card-title">Cena: @Model.Cena.ToString("0.00") </p>
								</div>

						</div>
					</div>
            
             </div>
        </div>

    </div>


     <div>
        <a asp-action="DodajDoKoszyka" asp-controller="Koszyk" asp-route-id="@Model.IdOgloszenia" 
        class="waves-effect waves-light btn"><i class="material-icons right ">add_shopping_cart</i>
        Dodaj do koszyka </a>
    </div>

</div>

